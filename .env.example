# Database Configuration
MONGODB_URI=mongodb://localhost:27017/messengerko

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5174

# Admin Configuration
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production

# Email Configuration (Optional - for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration (Optional - for future features)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
